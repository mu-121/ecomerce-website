html(lang='en')
  head
    title Ecommerce Website
    link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css')
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css')
    script(src='https://cdn.jsdelivr.net/npm/jquery@3.6.1/dist/jquery.slim.min.js')
    script(src='https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js')
    style.
      /* Make the image fully responsive */
      .carousel-inner img {
      width: 100%;
      height: 100%;
      }
      .card{
        margin-top: 10px;
        margin-bottom: 10px;
      }
      .marginclass{
        margin-top: 5px;
        margin-bottom: 10px;
      }
      .no-border{
        border: 0;
      }

  body
    .container
      nav.navbar.navbar-expand-lg.navbar-light.bg-light
        a.navbar-brand Ecommerce Website
        button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav
            li.navbar-item
              a.nav-link(href='/') Home
            li.navbar-item
              a.nav-link(href='/login') Login
            li.navbar-item
              a.nav-link(href='/signup') Signup
            li.navbar-item
              a.nav-link(href='/about') About
            li.navbar-item
              a.nav-link(href='/contact') Contact Us
          form.form-inline.my-2.my-lg-0(action="/search" method="POST")
            input.form-control.mr-sm-2(type='search' placeholder='Search products' aria-label='Search' name='q')
            button.btn.btn-outline-success.my-2.my-sm-0(type="submit") Search
          a.btn.btn-outline-secondary.mx-2.float-right(href='/cart') View Cart
          a.btn.btn-outline-secondary.mx-2.float-right(href='/profile') View Profile
      .container
        .row
          .col-md-3.border.bg-light.sticky-top
            h5.text-center.marginclass Categories
            ul.list-group
                li.list-group-item
                    a(href='/category/clothing') Clothing and fashion accessories
                li.list-group-item
                    a(href='/category/electronics') Electronics
                li.list-group-item
                    a(href='/category/homedecor') Home and garden
                li.list-group-item
                    a(href='/category/beauty') Beauty and personal care
                li.list-group-item
                    a(href='/category/toys') Toys and games
                li.list-group-item
                    a(href='/category/sports') Sports and outdoors
                li.list-group-item
                    a(href='/category/health') Health and wellness
                li.list-group-item
                    a(href='/category/food') Food and beverages
                li.list-group-item
                    a(href='/category/books') Books and media
                li.list-group-item
                    a(href='/category/furniture') Furniture and home decor
          .col-md-9
            #demo.carousel.slide(data-ride='carousel')
              ul.carousel-indicators
                li.active(data-target='#demo' data-slide-to='0')
                li(data-target='#demo' data-slide-to='1')
