html(lang='en')
  head
    title Contact Us
    link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css')
  body
    .container
      nav.navbar.navbar-expand-lg.navbar-light.bg-light
        a.navbar-brand Ecommerce Website
        button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav
            li.navbar-item
              a.nav-link(href='/') Home
            li.navbar-item
              a.nav-link(href='/login') Login
            li.navbar-item
              a.nav-link(href='/signup') Signup
            li.navbar-item
              a.nav-link(href='/about') About
            li.navbar-item
              a.nav-link(href='/contact') Contact Us
          form.form-inline.my-2.my-lg-0(action="/search" method="POST")
            input.form-control.mr-sm-2(type='search' placeholder='Search products' aria-label='Search' name='q')
            button.btn.btn-outline-success.my-2.my-sm-0(type="submit") Search
          a.btn.btn-outline-secondary.mx-2.float-right(href='/cart') View Cart
          a.btn.btn-outline-secondary.mx-2.float-right(href='/profile') View Profile
      form.text-center.border.border-light.p-5(action='#!')
        p.h4.mb-4 Contact us
        input#defaultContactFormName.form-control.mb-4(type='text' placeholder='Name')
        input#defaultContactFormEmail.form-control.mb-4(type='email' placeholder='E-mail')
        label Subject
        select.browser-default.custom-select.mb-4
          option(value='' disabled='') Choose option
          option(value='1' selected='') Feedback
          option(value='2') Report a bug
          option(value='3') Feature request
          option(value='4') Feature request
        .form-group
          textarea#exampleFormControlTextarea2.form-control.rounded-0(rows='3' placeholder='Message')
        .custom-control.custom-checkbox.mb-4
          input#defaultContactFormCopy.custom-control-input(type='checkbox')
          label.custom-control-label(for='defaultContactFormCopy') Send me a copy of this message
        button.btn.btn-info.btn-block(type='submit') Send
      footer
        .container
            p.text-center Copyright 2021 E-Commerce Website
